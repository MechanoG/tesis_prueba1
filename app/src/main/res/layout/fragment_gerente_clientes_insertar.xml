<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_gerente_inventario_insertar">


    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="640dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cliente_nuevo"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/rift_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="10sp"
            android:text="Ingresar Rift"
            app:layout_constraintBottom_toTopOf="@+id/editTextText"
            app:layout_constraintTop_toBottomOf="@+id/cliente_nuevo"
            app:layout_constraintVertical_bias="0.15"
            tools:layout_editor_absoluteX="158dp" />

        <EditText
            android:id="@+id/rift_input"
            android:layout_width="391dp"
            android:layout_height="72dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Rift"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/descri_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cod_label" />

        <TextView
            android:id="@+id/raz_soc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10sp"
            android:text="Ingresar descripcion"
            app:layout_constraintBottom_toTopOf="@+id/raz_soc_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/raz_soc_input"
            android:layout_width="394dp"
            android:layout_height="74dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Razon Social"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/encargado_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/encargado_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingLeft="10sp"
            android:text="Ingresar encargado"
            app:layout_constraintBottom_toTopOf="@+id/encargado_num_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/encargado_input"
            android:layout_width="393dp"
            android:layout_height="61dp"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:hint="Encargado"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/cant_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/encargado_num_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingLeft="10sp"
            android:text="Ingresar encargado num"
            app:layout_constraintBottom_toTopOf="@+id/encargado_num_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/encargado_num_input"
            android:layout_width="393dp"
            android:layout_height="61dp"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:hint="Contacto Encargado"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/cant_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar" />

            <Button
                android:id="@+id/ingresar_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ingresar" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/cliente_nuevo"
        android:layout_width="365dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="Ingresar Nuevo Cliente"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>