<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="18dp"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cli_rif_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cli_razsoc_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/infoClie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#0089C0"
                android:text="Info"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:icon="@drawable/baseline_info_24"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modclient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#0089C0"
                android:text="Modificar"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:icon="@drawable/baseline_modificar_24"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/eliminarclient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#7C0000"
                android:text="Eliminar"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:icon="@drawable/baseline_remove_24"
                app:iconTint="@color/white" />



        </LinearLayout>



    </LinearLayout>










</androidx.cardview.widget.CardView>